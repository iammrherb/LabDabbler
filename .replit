modules = ["python-3.11", "nodejs-20", "python3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "jq", "libiconv", "libsodium", "libxcrypt", "libyaml", "nettle", "openssh", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LabDabbler Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LabDabbler Backend"

[[workflows.workflow]]
name = "LabDabbler Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web/frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "LabDabbler Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web/backend && python app.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 36783
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "web.backend.app:app", "--host", "0.0.0.0", "--port", "5000"]
